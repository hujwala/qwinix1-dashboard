						<%= form_for :hrs do |f| %>
						<div class="from-group">
							<label>Name</label>
							<%= f.text_field :birthday, :class=>"form-control" %>
						</div>
						<br>
						<%= f.submit "OK", :class=>"btn btn-primary ok-btn-padding" %>
						<%= link_to "Cancel", admin_users_path, :class => "btn btn-default", remote: true %>
						<% end %>
					</div>
				</ul>
			<script type="text/javascript">
				birthday()
			</script>
			</div>

			<div class="dropdown check1">
				<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					Achivements
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="width:500px;height:250px;">
					<div class="col-lg-6">
						<%= form_for :hrs do |f| %>
						<div class="from-group">
							<label>Employee name</label>
							<%= f.text_field :employee_name, :class=>"form-control" %>
						</div>
						<div class="from-group">
							<label>Acheveiments</label>
