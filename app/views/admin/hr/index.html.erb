<div class="page-title">
	HR
</div>
<div id="div_flash_message">
	<%= render :partial=>"/layouts/dashing/flash_messages" -%>
</div>
<div class="container">
	<div id="div_wallboard_button">
		<div class="text-right dash-btn-group" id="lnkdb">
			<%= link_to 'Wallboard', dashing_path, target:"_blank" %>
		</div>  
	</div>

	<div class="row dashboard_index">
		<div id="div_dashboard_index" class="col-sm-6 hidden-xs">
			<%#= render :partial=>"index" %>
		</div>
		<div id="div_dashboard_show" class="col-xs-12 col-sm-6">
			<%#= render :partial=>"show", locals: {:dashboard => @dashboard } %>
		</div>
	</div>
</div>

<div class="container">
	<div class="container">
		<div class="row">
			<div class="dropdown check1">
				<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					Company updates
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu " aria-labelledby="dropdownMenu1" style="width:500px;height:250px;" id="updates">
					<div class="col-lg-6" id="updates">
						<%= form_for :hrs do |f| %>
						<div class="from-group">
							<label>Title</label>
							<%= f.text_field :name1, :class=>"form-control" %>
						</div>
						<div class="from-group">
							<label>Description</label>
							<%= f.text_area :description1, :class=>"form-control"%>
						</div>
						<br>
						<%= f.submit "OK", :class=>"btn btn-primary ok-btn-padding" %>
