				</ul>
			</div>

		</br>

		<div class="dropdown check1">
			<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
				General Announcement
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="width:500px;height:250px;">

				<div class="col-lg-7">
					<%= form_for :hrs do |f| %>
					<div class="from-group">
						<label> Name</label>
						<%= f.text_field :general_name, :class=>"form-control" %>
					</div>
					<div class="from-group">
						<label>Description</label>
						<%= f.text_area :general_description, :class=>"form-control"%>
					</div>
					<br>
					<%= f.submit "OK", :class=>"btn btn-primary ok-btn-padding" %>
					<%= link_to "Cancel", admin_users_path, :class => "btn btn-default", remote: true %>
					<% end %>

				</div>
			</ul>
		</div>


	</div>
</div>
<div class="col-lg-6 cb-selection  check">
	<h3> Select widgets </h3>
	<div class="from-group">
		<div class="checkbox span5 well">
			<label>
				<h4><input type="checkbox"  id="br"> BIRTHDAYS</h4>
			</label>
		</div>
	</div>
	<div class="from-group">
		<div class="checkbox span5 well">
			<label>
				<h4> <input type="checkbox" id="ach"> ACHIEVEMENTS</h4>
			</label>
		</div>
	</div>
	<div class="from-group ">
		<div class="checkbox span5 well">
			<label>
				<h4><input type="checkbox" id="cu"> COMPANY UPDATES</h4>
			</label>
		</div>
	</div>
	<div class="from-group ">
		<div class="checkbox span5 well">
			<label>
				<h4><input type="checkbox" id="ev"> EVENTS</h4>
			</label>
		</div>
	</div>


	<div class="from-group ">
		<div class="checkbox span5 well">
			<label>
				<h4><input type="checkbox" id="gn"> GENERAL ANNOUNCEMENT</h4>
			</label>
		</div>
	</div>
</div>
</div>
</div>

<script type="text/javascript">
	
	$(document).on("change",".cb-selection input[type='checkbox']", function(){
		var _url="";
		$(".cb-selection input[type='checkbox']").each(function(_index, _ele){
			if( $(_ele).prop("checked") )
				_url += "|"+$(_ele).attr("id") 		
		});
		_url = _url.substring(1);
		$("#lnkdb a").attr("href", "/admin/updates/28/dashing/?w="+_url);
	});
</script>