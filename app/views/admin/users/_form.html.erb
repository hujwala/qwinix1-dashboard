 <div class="row">
  <div class="col-sm-offset-2 col-sm-10">
    <%= form_for :user, :url => admin_users_path, :method => :post, :html => {:id => "create_user",:remote => true} do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">New User</h3>
      </div>
      <div class="panel-body" style="height:auto;">
       
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Email *</label>
          <div class="col-sm-8">
            <%= f.text_field :email, :class=>"form-control email",  :placeholder=>"Email" %>
          </div>
        </div><br><br>
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Password *</label>
          <div class="col-sm-8">
            <%= f.password_field :password, :class=>"form-control password",  :placeholder=>"Password" %>
          </div>
        </div><br><br>
        <div class="form-group">
          <label for="inputName" class="col-sm-4 control-label">Password Confirmation *</label>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, :class=>"form-control password_confirmation",  :placeholder=>"Password Confirmation" %>
          </div>
        </div>
      </div>
      <div class="panel-footer text-right">
        <%= link_to "Cancel", admin_users_path, :class => "btn btn-default", remote: true %>
        <%= f.submit "OK", :id => "click_disable1", :class => "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $("#click_disable1").click(function(){
      var val1 = $('.name').valid();
      var val2 = $('.email').valid();
      var val3 = $('.password').valid();
      var val4 = $('.password_confirmation').valid();
      if (val1 && val2 && val3 && val4) {
        $("#click_disable1").addClass('disabled');
      }
    });
  });
</script>